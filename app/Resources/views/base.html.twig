<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="{{ asset('bundles/dunglascarrental/css/style.css') }}" type="text/css" media="all" />
        <title>{% block title %}Car Rental{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <script src="{{ asset('bundles/dunglascarrental/js/modernizr-1.7.min.js') }}" type="text/javascript"></script>
    </head>
    <body>
        <div id="symfony-wrapper">
            <header id="symfony-header">
                <h1>Car Rental</h1>

                <nav>
                    <ul>
                        <li><a href="{{ path('customer') }}">Customers</a></li>
                        <li><a href="{{ path('vehicle') }}">Vehicles</a></li>
                        <li><a href="{{ path('manufacturer') }}">Manufacturers</a></li>
                        <li><a href="{{ path('model') }}">Models</a></li>
                        <li><a href="{{ path('model') }}">Fuels</a></li>
                    </ul>
                </nav>
            </header>

            {% if app.session.flash('notice') %}
                <div class="flash-message">
                    <em>Notice</em>: {{ app.session.flash('notice') }}
                </div>
            {% endif %}

            <div id="main" role="main" class="symfony-content">
                {% block content %}
                {% endblock %}
            </div>

            <footer>
            Powered by Car Rental.
            </footer>
        </div>
        <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if necessary -->
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js" type="text/javascript"></script>
        <script type="text/javascript">window.jQuery || document.write("<script src='{{ asset('bundles/dunglascarrental/js/jquery-1.5.1.min.js') }}'>\x3C/script>")</script>
    </body>
</html>